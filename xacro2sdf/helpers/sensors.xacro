<?xml version="1.0"?>
<sdf xmlns:xacro="http://xacro">

<!-- __default_topic__ -->
<xacro:macro name="imu" params="name rate topic">
    <sensor name="${name}" type="imu">
        <always_on>true</always_on>
        <update_rate>${rate}</update_rate>
        <visualize>true</visualize>
        <topic>${topic}</topic>
    </sensor>
</xacro:macro>
</sdf>